include ../contractors/temp-variables
    .col-lg-4.col-md-6.col-12
        .card.h-100.px-3.py-3
            h2.pb-3
                a(href='#') Подрядчики
            each contractor in contractors
                a(href='#').d-flex.align-items-center.justify-content-between.my-2
                    .d-flex.align-items-center
                        if contractor.image
                            img.rounded-circle(src="img/temp/contractors/" + contractor.image + ".png", style="height:40px;width:40px")
                        else
                            .bg-blue.rounded-circle.d-flex.align-items-center.justify-content-center(style="height:40px;width:40px")
                                h3.m-0 C
                        .ml-3
                            p.font-weight-bold.m-0(style="text-transform:unset")=contractor.name
                            p.m-0.text-muted.small=contractor.counter
                    .d-flex.align-items-center.justify-content-end
                        p.m-0.text-muted.small=contractor.date